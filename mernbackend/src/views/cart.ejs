<!DOCTYPE html>
<html>
<head>
<style>
  body {
  background-color: #f4f4f4;
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
}

h2 {
  background-color: #333;
  color: #fff;
  text-align: center;
  padding: 20px;
}

#cart-items {
  list-style-type: none;
  padding: 0;
  margin: 10px 0;
}

#cart-items li {
  background-color: #fff;
  border: 1px solid #ddd;
  padding: 10px;
  margin: 5px 0;
  box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.2);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.delete-button {
  background-color: #ff6b6b;
  color: #fff;
  border: none;
  border-radius: 5px;
  padding: 5px 10px;
  cursor: pointer;
}

#cart-total {
  text-align: right;
  padding: 10px 20px;
}

a {
  display: inline-block;
  padding: 10px 20px;
  background-color: #333;
  color: #fff;
  text-decoration: none;
  border-radius: 5px;
  margin-top: 10px;
  text-align: center;
}

#checkout-button {
  display: inline-block;
  padding: 10px 20px;
  background-color: #4CAF50;
  color: #fff;
  text-decoration: none;
  border: none;
  border-radius: 5px;
  margin-top: 10px;
  text-align: center;
  cursor: pointer;
}

</style>
</head>
<body>
  <h2>Your Shopping Cart</h2>
  <ul id="cart-items">
    <!-- Cart items will be displayed here -->
    <% cartItems.forEach((item, index) => { %>
      <li>
        <%= `${item.productName} - INR${item.productPrice}` %>
        <button class="delete-button" onclick="deleteItem(<%= index %>)">Delete</button>
      </li>
    <% }); %>
  </ul>
  <p>Total Price: INR<span id="cart-total"><%= cartTotal.toFixed(2) %></span></p>
  <a href="http://localhost:7000">Back to Products</a>
  <button id="checkout-button" onclick="window.location.href='/stylesheet/checkout.html'">Checkout</button>
</body>
</html>
